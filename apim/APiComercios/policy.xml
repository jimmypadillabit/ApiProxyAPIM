<policies>
  <inbound>
    <base />
    <!-- Example CORS policy for demo -->
    <cors>
      <allowed-origins>
        <origin>*</origin>
      </allowed-origins>
      <allowed-methods>
        <method>GET</method>
        <method>POST</method>
      </allowed-methods>
      <allowed-headers>
        <header>*</header>
      </allowed-headers>
      <expose-headers>
        <header>Ocp-Apim-Subscription-Key</header>
      </expose-headers>
    </cors>

    <!-- Simple rate limit for demo -->
    <rate-limit calls="10" renewal-period="60" />

    <!-- Set backend service to the demo host -->
    <set-backend-service base-url="http://4.157.52.221/api" />

  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>